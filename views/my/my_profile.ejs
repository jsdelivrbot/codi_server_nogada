            <div>
                <div class="woodBg" style="    height: 350px;">
                    <div class="text-center" style="    margin-right: 30%;    margin-left: 30%;">
                        <div class="userImage" style="">
                            <div style="    display: inline-block;    text-align: center;"><img id="profil" src="/image/user2.png" style="display: block;"></div>
                            <h6 style="    color: #fff;">수정할 사진을 올리세요.</h6>
                            <div class="input-group" style="    margin-top: 20px;    margin-bottom: 5px;"> <label class="input-group-btn" style=""> <span class="btn btn-primary" style="    color: #fff;    background-color: #FFA000;    width: 90px;    border-color: #FFA000;">                        Browse… <input name="file" accept="image/*" type="file" style="display: none;" multiple="">                    </span> </label> <input type="text" class="form-control" readonly=""> </div>
                        </div> ' </div> <br> </div>
                <div class="subHeader">
                    <div> <span class="subHeaderMenu" style="    border-bottom-style: solid;    padding-bottom: 12px;"><a href="/my/profile" style="color: #fff;">프로필</a></span> <span class="subHeaderMenu" style="padding-bottom: 12px;"><a href="/my/post" style="color: #fff;">포스트</a></span> <span class="subHeaderMenu" style="padding-bottom: 12px;"><a href="/my/series" style="color: #fff;">시리즈</a></span> <span class="subHeaderMenu" style="padding-bottom: 12px;"><a href="/my/tutorial" style="color: #fff;">튜토리얼</a></span> </div>
                </div>
            </div>
            <div style="    width: 100%;    height: 100%;    display: block;">
                <div class="col-md-6  col-md-offset-3 personal-info" style="    margin-bottom: 30px;    text-align: center;">
                    <form class="form-horizontal" role="form">
                        <div style="    padding-bottom: 45px;    "> <label class="col-lg-3 control-label" style="    font-size: large;">이름:</label>
                            <div class="col-lg-8"> <input name="username" class="form-control" type="text" placeholder="이름을 입력해주세요."> </div>
                        </div>
                        <div style="padding-bottom: 45px;"> <label class="col-lg-3 control-label" style="    font-size: large;">ID:</label>
                            <div class="col-lg-8"> <input name="userid" class="form-control" type="text" placeholder="아이디를 입력해주세요."> </div>
                        </div>
                        <div style="padding-bottom: 45px;"> <label class="col-md-3 control-label" style="    font-size: large;">Password:</label>
                            <div class="col-md-8"> <input name="userpw" class="form-control" type="password" placeholder="패스위드를 입력해주세요."> </div>
                        </div>
                        <div> <input type="submit" class="btn btn-primary" value="저장하기" style="    color: #fff;    background-color: #ffa000;    font-size: large;    border-color: #ffa000;"> <input type="reset" class="btn btn-default" value="취소" style="    font-size: large;"></div>
                    </form>
                </div>
            </div>
        </form>
        <script>
            $(function() { // We can attach the `fileselect` event to all file inputs on the page               
                $(document).on('change', ':file', function() {
                    var input = $(this),
                        numFiles = input.get(0).files ? input.get(0).files.length : 1,
                        label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
                    input.trigger('fileselect', [numFiles, label]);
                });
                // We can watch for our custom `fileselect` event like this                
                $(document).ready(function() {
                    $(':file').on('fileselect', function(event, numFiles, label) {
                        var input = $(this).parents('.input-group').find(':text'),
                            log = numFiles > 1 ? numFiles + ' files selected' : label;
                        if (input.length) {
                            input.val(log);
                        } else {
                            if (log) alert(log);
                        }
                    });
                });
            });
            $(document).ready(function() {
                $(':file').on('fileselect', function(event, numFiles, label) {
                    console.log(numFiles);
                    console.log(label);
                });
            });

        </script>
</body>

